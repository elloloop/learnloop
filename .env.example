# LearnLoop Environment Variables
# Copy this file to .env.local and fill in your values

# ===================
# Firebase Configuration
# ===================
# Get these from Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin (optional - for server-side auth verification)
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account",...}

# ===================
# MongoDB Configuration
# ===================
# Your MongoDB connection string
MONGODB_URI=mongodb://<username>:<password>@<host>:<port>/<database>?options
MONGODB_DB_NAME=default

# ===================
# Application Settings
# ===================
# App identifier (used for data isolation)
NEXT_PUBLIC_APP_ID=learnloop-v1

# Owner email - this user gets 'owner' role automatically
NEXT_PUBLIC_OWNER_EMAIL=your-owner-email@example.com

# Set to 'true' to use test data store for all users
# NEXT_PUBLIC_USE_TEST_DATA=false

# ===================
# AI Provider API Keys (at least one required for question generation)
# ===================
# Google Gemini (recommended - cheapest)
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key

# OpenAI (optional fallback)
# NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key

# Anthropic Claude (optional fallback)
# NEXT_PUBLIC_ANTHROPIC_API_KEY=your_anthropic_api_key

# ===================
# Testing (optional)
# ===================
# PLAYWRIGHT_TEST_BASE_URL=http://localhost:3000
